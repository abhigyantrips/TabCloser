{
  "manifest_version": 3,
  "name": "Tab Closer",
  "version": "1.0.0",
  "description": "Quite literally, closes a tab as soon as you try to visit a URL you blocked.",
  "icons": {
    "64": "/assets/icon-off-64.png",
    "128": "/assets/icon-off-128.png",
    "256": "/assets/icon-off-256.png",
    "512": "/assets/icon-off-512.png"
  },
  "action": {
    "default_title": "Tab Closer",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.ts"
      ],
      "matches": [
        "http: //*/*",
        "https: //*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_page": "settings.html"
}